{
  "name": "rectificadora-inventario",
  "version": "1.0.0",
  "description": "Sistema de inventario para motores en rectificadora",
  "main": "electron-main.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "server:prod": "NODE_ENV=production node server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run server:prod\" \"wait-on http://localhost:5000 && electron .\"",
    "postinstall": "npx @electron/rebuild -f -w sqlite3 || true",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never --config.npmRebuild=false",
    "dist:packager": "npm run build && electron-packager . \"Rectificadora Santofimio\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=build/icon.ico --asar=false"
  },
  "keywords": [
    "inventario",
    "rectificadora",
    "motores"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "concurrently": "^8.2.2",
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.rectificadora.inventario",
    "productName": "Rectificadora Santofimio",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "server/**/*",
      "client/build/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/sqlite3/**/*"
    ],
    "npmRebuild": false,
    "win": {
      "target": "portable",
      "sign": null,
      "verifyUpdateCodeSignature": false,
      "signDlls": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-setup.exe"
    }
  }
}
